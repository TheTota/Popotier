{% extends "layout/base.html.twig" %}

{% block links %}
    {{ parent() }}
    <link rel="stylesheet" href="/public/css/login/login-form.css">
{%  endblock %}

{% block content %}

    <div id="login-container" class="container">
        <h2 id="login-title">Connexion</h2>
        <div class="row center">
            <div class="col-sm-4">
                <form method="POST" action="/login">
                    <div class="form-group">
                        <label for="inputEmail">Adresse email</label>
                        <input type="email" class="form-control" id="inputEmail" name="inputEmail" aria-describedby="emailHelp"
                               placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" class="form-control" id="inputPassword" name="inputPassword"
                               placeholder="Mot de passe">
                        <a href="/recovery"><small id="emailHelp" class="form-text text-muted">Mot de passe oubli√© ?</small></a>
                    </div>

                    {% if loginError %}
                        <small class="text-danger">Email ou mot de passe incorrect.</small>
                    {% endif %}

                    <button id=submit type="submit" class="btn btn-primary" name="recovery">Valider</button>

                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="/public/js/login/login-form.js"></script>
{% endblock %}
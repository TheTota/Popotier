{% extends "layout/base.html.twig" %}

{% block links %}
    {{ parent() }}
    <link rel="stylesheet" href="/public/css/user/user-recipes.css">
{% endblock %}

{% block content %}
    <div class="text-center">
        <h2 >
            <i class="fas fa-utensils"></i>
            Ma Cuisine
            <i class="fas fa-utensils"></i>
        </h2>
    </div>

    <div class="text-center">
        <a class="btn btn-outline-primary " id="addRecipe" href="{{ path('add_recipe') }}"> <i class="fas fa-plus-square"></i>
            Partager une nouvelle recette
        </a>
        <a class="btn btn-outline-primary" href="{{ path('user_update_info') }}">
            Modifier mes informations
        </a>
    </div>

    <ul class="nav nav-tabs text-dark">
        <li role="presentation" class="nav-item">
            <button id="user-recipe-button" class="nav-link text-dark btn btn-info">Mes recettes</button>
        </li>
        <li role="presentation" class="nav-item">
            <button id="user-liked-recipe-button" class="nav-link text-dark btn btn-info" >Mes favoris</button>
        </li>
    </ul>

    <div id="recipe-list"></div>

    <div id="pagination" class="row justify-content-lg-center">
        <div class="col-1">
            <button id="pagination-left-chevron" class="btn btn-flat text-justify"><i class="fas fa-chevron-left"></i></button>
        </div>
        <div id="page-numbers"></div>
        <div class="col-1">
            <button id="pagination-right-chevron" class="btn btn-flat"><i class="fas fa-chevron-right"></i></button>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script src="/public/js/user/user-recipe-list.js"></script>
    <script src="/public/js/recipe/recipe-like-system.js"></script>
{% endblock %}
